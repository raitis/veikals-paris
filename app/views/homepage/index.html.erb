
<% @extra_head_content = capture do %>
<%= stylesheet_link_tag 'stylesheets/allinone_bannerRotator' %>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
<%= javascript_include_tag 'jquery.ui.touch-punch.min.js' %>
<%= javascript_include_tag 'allinone_bannerRotator.js' %>

<%
meta :description => "Brenda apavi, somas un apģērbi par pieejamām cenām. Jaunas preces pievedums un akcijas katru dienu.",
     :keywords => %w(paris Paris pāris Pāris secondhand leti apavi lēti lētas somas letas lets apgerbs apģērbs)
%>

<script>
	jQuery(function() {

		jQuery('#allinone_bannerRotator_universal').allinone_bannerRotator({
			skin: 'universal',
			defaultEffect: 'slideFromLeft',
			width: 960,
			height: 384,
			thumbsWrapperMarginBottom: -35,				
			autoHideBottomNav:false,
			showOnInitNavArrows:false,
			autoHideNavArrows:true,
			showPreviewThumbs:false,
			enableTouchScreen:false,
			autoPlay: 6,
			firstImg: 4
		});		
	});
</script>
<% end %>

<div id="banner">
		<%= render('homepage/banner') %>
</div>

<%= render('homepage/newsbar') %>

<%= render('homepage/discounts') %>