<% set_title "īpašais piedāvājums" %>

<% @extra_head_content = capture do %>
 <noscript>
	<style>
		.st-accordion ul li{
			height:auto;
		}
		.st-accordion ul li > a span{
			visibility:hidden;
		}
	</style>
</noscript>

<% end %> 

<div id="special">
 <% if @special.blank? %>

 <% else %>
<div class="st-accordion" id="st-accordion">
	<ul>
		<li>
			<a href="#" class="special"><%= @special.title %><span class="st-arrow">Open or Close</span></a>
			<div class="st-content">
				<% unless @special.image.blank? %>
					<%= image_tag @special.image.url, :width => 720 %><br />
				<% end %>
				<% unless @special.video.blank? %>
					<br /><iframe width="640" height="480" src="//www.youtube.com/embed/<%= @special.video %>" frameborder="0" allowfullscreen></iframe><br />
				<% end %>
				<p><%= simple_format(@special.content) %></p>
			</div>
		</li>
		<% if @other.blank? %>

 <% else %>
<% @other.each do |other| %>


		<li>
			<a href="#" class="special"><%= other.title %><span class="st-arrow">Open or Close</span></a>
			<div class="st-content">
				<% unless other.image.blank? %>
					<%= image_tag other.image.url, :width => 720 %><br />
				<% end %>
				<% unless other.video.blank? %>
					<br /><iframe width="640" height="480" src="//www.youtube.com/embed/<%= other.video %>" frameborder="0" allowfullscreen></iframe><br />
				<% end %>
				<p><%= simple_format(other.content) %></p>
			</div>
		</li>

<% end %>
<% end %>
	</ul>
</div>
<% end %>


 
</div>

 <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
 <%= javascript_include_tag 'jquery.accordion.js' %>
 <%= javascript_include_tag 'jquery.easing.1.3.js' %>

 <script type="text/javascript">
	$(function() { $('#st-accordion').accordion(); });
</script>
